# FFmpeg Path (Path to ffmpeg.exe)
# Windows Example: C:\ffmpeg\bin\ffmpeg.exe
# Linux Example: /usr/bin/ffmpeg
# Leave empty to try auto-detection or use system PATH
FFMPEG_PATH=

# Node.js Path (Path to node.exe, required for yt-dlp)
# Windows Example: C:\Program Files\nodejs\node.exe
NODE_PATH=

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Video Configuration
MIN_VIDEO_SIZE_MB=1.0
DEFAULT_VIDEO_QUALITY=1080

# Translation
TARGET_LANGUAGE=zh-CN
SOURCE_LANGUAGE=en

# Directory Configuration (Relative to project root)
DOWNLOADS_DIR=downloads
SUBS_RAW_DIR=subs_raw
SUBS_TRANSLATED_DIR=subs_translated
OUTPUT_DIR=output
LOGS_DIR=logs
